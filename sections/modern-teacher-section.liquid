      "label": "Large Title Text (4 words max for best effect)",
      "default": "THE INTERNET'S MOST SUPPORTIVE DRUM COACH"
    },
    {
      "type": "richtext",
      "id": "teacher_description",
      "label": "Teacher Description",
      "default": "<p>Your instructor bio and description goes here. Keep it engaging and informative.</p>"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
