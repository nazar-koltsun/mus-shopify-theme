      "id": "text_color",
      "label": "Description Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "stats_color",
      "label": "Stats Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic/Achievement",
      "settings": [
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon Type",
          "options": [
            {
              "value": "book-icon",
              "label": "Book Icon"
            },
            {
              "value": "award-icon",
              "label": "Award Icon"
            },
            {
              "value": "record-icon",
              "label": "Record Icon"
            }
          ],
          "default": "book-icon"
        },
        {
          "type": "select",
          "id": "icon_size",
          "label": "Icon Size",
          "options": [
            {
              "value": "small",
              "label": "Small (20px)"
            },
            {
              "value": "medium",
              "label": "Medium (28px)"
            },
            {
              "value": "large",
              "label": "Large (36px)"
            },
            {
              "value": "xlarge",
              "label": "Extra Large (44px)"
            }
          ],
          "default": "medium"
        },
        {
          "type": "color",
          "id": "icon_color",
          "label": "Icon Color",
          "default": "#0B76DB"
        },
        {
          "type": "text",
          "id": "stat_number",
          "label": "Number/Count",
          "default": "2x"
        },
        {
          "type": "text",
          "id": "stat_text",
          "label": "Stat Description",
          "default": "Drumeo Awards Nominee"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Modern Teacher Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "icon_type": "award-icon",
            "icon_size": "medium",
