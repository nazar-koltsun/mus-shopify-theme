{% comment %}
================================================================
BUTTON COMPONENT - Reusable Button Snippet
================================================================

Usage:
{% render 'button', 
   text: 'Click Me',
   url: '/products', 
   variant: 'drumeo',
   size: 'medium',
   icon: 'cart-plus',
   full_width: true,
   target: '_blank',
   class: 'custom-class' %}

Parameters:
- text (required): Button text
- url (required): Button link
- variant: drumeo, pianote, guitareo, singeo, musora, musora-black, musora-white, outline-white, outline-black
- size: small, medium, large
- icon: arrow, play, download, external, lock, clapper-board, cart, cart-plus, none
- full_width: true/false
- target: _blank, _self
- class: Additional CSS classes
- disabled: true/false
- id: Button ID attribute

================================================================
{% endcomment %}

<!-- Parameter Setup with Defaults -->
{% liquid
  assign button_text = text | default: 'Button'
  assign button_url = url | default: '#'
  assign button_variant = variant | default: 'musora'
  assign button_size = size | default: 'medium'
  assign button_icon = icon | default: 'arrow'
  assign button_full_width = full_width | default: false
  assign button_target = target | default: '_self'
  assign button_class = class | default: ''
  assign button_disabled = disabled | default: false
  assign button_id = id | default: ''
%}

<!-- Build CSS Classes -->
{% liquid
  assign css_classes = 'btn'
  assign css_classes = css_classes | append: ' btn--' | append: button_variant
  assign css_classes = css_classes | append: ' btn--' | append: button_size
  
  if button_full_width
    assign css_classes = css_classes | append: ' btn--full-width'
  endif
  
  if button_disabled
    assign css_classes = css_classes | append: ' btn--disabled'
  endif
  
  if button_class != blank
    assign css_classes = css_classes | append: ' ' | append: button_class
  endif
%}

