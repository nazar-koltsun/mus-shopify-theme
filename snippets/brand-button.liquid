<!-- Button Element -->
{% if button_disabled %}
  <span class="{{ css_classes }}"
        {% if button_id != blank %}id="{{ button_id }}"{% endif %}
        aria-disabled="true">
    <span class="btn__text">{{ button_text }}</span>
    {% if button_icon != 'none' and icon_svg != blank %}
      <span class="btn__icon">{{ icon_svg }}</span>
    {% endif %}
  </span>
{% else %}
  <a href="{{ button_url }}"
     class="{{ css_classes }}"
     {% if button_id != blank %}id="{{ button_id }}"{% endif %}
     {% if button_target != '_self' %}target="{{ button_target }}"{% endif %}
     {% if button_target == '_blank' %}rel="noopener noreferrer"{% endif %}>
    <span class="btn__text">{{ button_text }}</span>
    {% if button_icon != 'none' and icon_svg != blank %}
      <span class="btn__icon">{{ icon_svg }}</span>
    {% endif %}
  </a>
{% endif %}